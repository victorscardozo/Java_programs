import java.util.*;

class Main {
  public static void main(String[] args) {
  

Scanner scan = new Scanner (System.in);


  System.out.println("Insira o valor do produto:\n ");
  double produto = scan.nextDouble();

  System.out.println("Insira o código de desconto do produto:\n");
  int codigo = scan.nextInt();


  double resultado;
  switch(codigo){

    case 1:
      
      if(produto>30.0){
       resultado =  produto * 0.7;
       System.out.println("O novo valor é: "+ resultado);
      }
      else{
        resultado = produto;
      }
      
      break;

      
    case 2:
      resultado = produto * 0.8;
      System.out.println("O novo valor é: "+ resultado);
      
      break;

      
    case 3:
      
      if(produto>100.0){
        resultado = produto * 0.9;
      System.out.println("O novo valor é: "+ resultado);
      }
      else{
        resultado = produto * 0.95;
        System.out.println("O novo valor é: "+ resultado);
      }
      
      break;

      
      default:
        System.out.println("Favor digitar um código de desconto válido.");
      
      break;
      }
    



    
   
  }
}
